{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "noImplicitAny":true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["element-plus/global","vite/client"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"] // 相对位置需要配置baseUrl才能识别，否则会报错
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue","src/*.d.ts","src/*.ts","src/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
